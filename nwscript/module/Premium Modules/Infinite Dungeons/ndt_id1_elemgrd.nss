void main()
{
    // update the elementals source's queue to summon a replacement.
    object oSource = GetLocalObject(OBJECT_SELF, "oSource");

    int nSummon = GetLocalInt(oSource, "nSummon");

    nSummon++;

    SetLocalInt(oSource, "nSummon", nSummon);
}


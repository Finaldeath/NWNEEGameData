/*
    Unique power of the Reaper Ghoul's claws. Restores health to the summoner.
*/
//::////////////////////////////////////////////////////////////////////////////
//:: Created By: Grant Mackay
//:: Created On:
//::////////////////////////////////////////////////////////////////////////////
void main()
{
    object oMaster = GetMaster();
    int nLevel = GetHitDice(OBJECT_SELF);
    int nHeal = d4() + (nLevel / 2);

    effect eHeal = EffectHeal(nHeal);

    ApplyEffectToObject(DURATION_TYPE_INSTANT, eHeal, oMaster);
}

#include "inc_id1_maggris"

void main()
{
   object oCreature = GetNearestCreature(CREATURE_TYPE_PLAYER_CHAR, PLAYER_CHAR_IS_PC);

   if (GetIsObjectValid(oCreature) && GetDistanceToObject(oCreature) < 20.0)
   {
       HatchCocoon();
   }
}

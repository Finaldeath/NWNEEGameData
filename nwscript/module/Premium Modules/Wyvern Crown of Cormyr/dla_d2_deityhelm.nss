int StartingConditional()
{
    object oPC = GetPCSpeaker();
    int nGE = GetAlignmentGoodEvil(oPC);
    int nLC = GetAlignmentLawChaos(oPC);

    return (nGE==ALIGNMENT_GOOD || nGE==ALIGNMENT_NEUTRAL);
}
